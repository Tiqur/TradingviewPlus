{
  "name": "tradingviewplus",
  "version": "1.0.0",
  "description": "TradingViewPlus browser extension for feature enhancements",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "watch": "cp -r lib/ dist/ && npx nodemon --watch src --ext ts --exec 'npx tsc && npx sass --watch public/:dist/'",
    "dev-firefox": "node scripts/dev.js firefox",
    "dev-chrome": "node scripts/dev.js chrome",
    "dev-opera": "node scripts/dev.js opera",
    "build": "npm install && node scripts/build.js",
    "build-firefox": "npm install && node scripts/build.js firefox",
    "build-chrome": "npm install && node scripts/build.js chrome",
    "build-opera": "npm install && node scripts/build.js opera"
  },
  "keywords": [
    "tradingview",
    "extension",
    "typescript",
    "browser-extension"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.7.2",
    "adm-zip": "^0.5.16",
    "nodemon": "^3.0.1",
    "sass": "^1.93.3",
    "typescript": "^5.9.3",
    "web-ext": "^9.1.0"
  }
}
