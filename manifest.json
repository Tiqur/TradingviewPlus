{

  "manifest_version": 2,
  "name": "AutoTimeframeColors",
  "version": "2.0",
  "author": "Tiqur",

  "description": "Changes line color according to current timeframe",

  "permissions": ["storage", "clipboardWrite"],

  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*"],
      "js": [
        "main.js", 
        "inject.js",
        "features/replay.js",
        "features/auto.js",
        "features/lineWidth.js",
        "features/lineStyle.js",
        "features/copyPrice.js",
        "features/timeframeScroll.js",
        "features/priceScroll.js",
        "features/invertScale.js",
        "features/autoTimeframeColors.js",
        "features/snackbar.js"]
    }
  ]
}
